/* ========================================================================
   JOURNEY SECTION - SCOPED STYLES
   Minimal CSS scoped to .journey namespace to avoid conflicts
   Uses existing site CSS variables for consistency
   ======================================================================== */

/* Journey namespace - all styles scoped to avoid conflicts */
.journey {
  /* Inherit site's CSS variables */
  --bg: #0b0f0d;
  --bg-soft: #0f1512;
  --ink: #ece9e0;
  --muted: #cfc8b7;
  --gold: #c8a96a;
  --copper: #b97a3c;
  --emerald: #0f2a1f;
  --accent: #9e8b64;
  --radius: 5px;
  --maxw: 1200px;
}

/* === JOURNEY LAYOUT === */
.journey-container {
  max-width: var(--maxw);
  margin: 0 auto;
  padding: 0 20px;
}

.journey-main {
  padding: 120px 0 80px; /* Account for fixed header */
  min-height: 60vh;
}

/* === JOURNEY HEADER === */
.journey-header {
  text-align: center;
  margin-bottom: 60px;
}

.journey-title {
  font-family: 'Bordeaux Thin', serif;
  font-weight: 100;
  font-size: clamp(32px, 5vw, 56px);
  text-transform: uppercase;
  letter-spacing: 0.04em;
  line-height: 1.1;
  color: var(--gold);
  margin: 0 0 16px;
}

.journey-subtitle {
  font-family: 'Poppins', sans-serif;
  font-size: 18px;
  color: var(--muted);
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.6;
}

/* === LOADING STATES === */
.journey-loading {
  text-align: center;
  padding: 60px 20px;
  color: var(--muted);
  font-family: 'Poppins', sans-serif;
}

.journey-error {
  text-align: center;
  padding: 60px 20px;
}

.journey-error-message {
  color: var(--muted);
  font-family: 'Poppins', sans-serif;
  margin-bottom: 20px;
}

.journey-fallback {
  padding: 40px;
  border: 1px solid rgba(200, 169, 106, 0.18);
  border-radius: var(--radius);
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.02), rgba(255, 255, 255, 0));
  text-align: center;
}

.journey-fallback h3 {
  font-family: 'Bordeaux Light', serif;
  color: var(--gold);
  margin-bottom: 16px;
}

.journey-fallback p {
  color: var(--muted);
  line-height: 1.6;
}

/* === ARTICLES GRID === */
.journey-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: 32px;
  margin-top: 40px;
}

/* === ARTICLE CARDS === */
.journey-card {
  border: 1px solid rgba(200, 169, 106, 0.18);
  border-radius: var(--radius);
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.02), rgba(255, 255, 255, 0));
  overflow: hidden;
  transition: all 0.3s ease;
  position: relative;
  display: block;
  text-decoration: none;
  color: inherit;
}

.journey-card:hover {
  border-color: rgba(200, 169, 106, 0.35);
  transform: translateY(-2px);
}

/* Respect reduced motion */
@media (prefers-reduced-motion: reduce) {
  .journey-card {
    transition: none;
  }
  
  .journey-card:hover {
    transform: none;
  }
}

.journey-card-image-wrapper {
  position: relative;
  aspect-ratio: 16 / 9;
  overflow: hidden;
  background: linear-gradient(180deg, #121814, #0b0f0d);
}

.journey-card-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.journey-card:hover .journey-card-image {
  transform: scale(1.05);
}

@media (prefers-reduced-motion: reduce) {
  .journey-card-image {
    transition: none;
  }
  
  .journey-card:hover .journey-card-image {
    transform: none;
  }
}

.journey-card-content {
  padding: 24px;
}

.journey-card-meta {
  font-family: 'Poppins', sans-serif;
  font-size: 12px;
  color: var(--muted);
  letter-spacing: 2px;
  text-transform: uppercase;
  margin-bottom: 12px;
}

.journey-card-title {
  font-family: 'Bordeaux Light', serif;
  font-weight: 300;
  font-size: 24px;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  line-height: 1.2;
  color: var(--ink);
  margin: 0 0 16px;
}

.journey-card-excerpt {
  font-family: 'Poppins', sans-serif;
  font-size: 14px;
  line-height: 1.6;
  color: var(--muted);
  margin: 0;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.journey-card-tags {
  margin-top: 16px;
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.journey-tag {
  font-family: 'Poppins', sans-serif;
  font-size: 10px;
  color: var(--gold);
  background: rgba(200, 169, 106, 0.1);
  border: 1px solid rgba(200, 169, 106, 0.2);
  border-radius: 12px;
  padding: 4px 8px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* === ARTICLE PAGE STYLES === */
.journey-article {
  max-width: 800px;
  margin: 0 auto;
  padding: 120px 20px 80px;
}

.journey-article-header {
  text-align: center;
  margin-bottom: 48px;
}

.journey-article-meta {
  font-family: 'Poppins', sans-serif;
  font-size: 12px;
  color: var(--muted);
  letter-spacing: 2px;
  text-transform: uppercase;
  margin-bottom: 24px;
}

.journey-article-title {
  font-family: 'Bordeaux Thin', serif;
  font-weight: 100;
  font-size: clamp(28px, 4vw, 48px);
  text-transform: uppercase;
  letter-spacing: 0.04em;
  line-height: 1.1;
  color: var(--ink);
  margin: 0 0 24px;
}

.journey-article-hero {
  width: 100%;
  max-width: 100%;
  border-radius: var(--radius);
  margin-bottom: 48px;
  aspect-ratio: 16 / 9;
  object-fit: cover;
}

.journey-article-content {
  font-family: 'Poppins', sans-serif;
  font-size: 16px;
  line-height: 1.7;
  color: var(--ink);
}

.journey-article-content p {
  margin-bottom: 24px;
}

.journey-article-content h2 {
  font-family: 'Bordeaux Light', serif;
  font-weight: 300;
  font-size: 24px;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--gold);
  margin: 48px 0 24px;
}

.journey-article-content h3 {
  font-family: 'Bordeaux Light', serif;
  font-weight: 300;
  font-size: 20px;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--accent);
  margin: 36px 0 18px;
}

.journey-article-tags {
  margin: 48px 0;
  padding: 24px 0;
  border-top: 1px solid rgba(200, 169, 106, 0.18);
  border-bottom: 1px solid rgba(200, 169, 106, 0.18);
}

.journey-article-tags-title {
  font-family: 'Poppins', sans-serif;
  font-size: 12px;
  color: var(--muted);
  text-transform: uppercase;
  letter-spacing: 2px;
  margin-bottom: 16px;
}

.journey-article-tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

/* === NAVIGATION === */
.journey-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 48px 0;
  padding: 24px 0;
  border-top: 1px solid rgba(200, 169, 106, 0.18);
}

.journey-nav-link {
  font-family: 'Poppins', sans-serif;
  font-size: 14px;
  color: var(--gold);
  text-decoration: none;
  padding: 12px 24px;
  border: 1px solid rgba(200, 169, 106, 0.35);
  border-radius: var(--radius);
  transition: all 0.3s ease;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.02), rgba(255, 255, 255, 0));
  text-transform: uppercase;
  letter-spacing: 1px;
}

.journey-nav-link:hover {
  border-color: var(--gold);
  background: rgba(200, 169, 106, 0.1);
}

.journey-nav-link[hidden] {
  visibility: hidden;
}

/* === READING TIME === */
.journey-reading-time {
  font-family: 'Poppins', sans-serif;
  font-size: 12px;
  color: var(--muted);
  text-transform: uppercase;
  letter-spacing: 1px;
}

/* === SKIP LINK === */
.journey-skip-link {
  position: absolute;
  top: -40px;
  left: 6px;
  background: var(--gold);
  color: var(--bg);
  padding: 8px;
  text-decoration: none;
  font-family: 'Poppins', sans-serif;
  font-size: 14px;
  border-radius: 0 0 4px 4px;
  z-index: 1000;
}

.journey-skip-link:focus {
  top: 0;
}

/* === RESPONSIVE DESIGN === */
@media (max-width: 768px) {
  .journey-grid {
    grid-template-columns: 1fr;
    gap: 24px;
  }
  
  .journey-card-content {
    padding: 20px;
  }
  
  .journey-article {
    padding: 100px 16px 60px;
  }
  
  .journey-nav {
    flex-direction: column;
    gap: 16px;
  }
  
  .journey-nav-link {
    width: 100%;
    text-align: center;
  }
}

@media (max-width: 480px) {
  .journey-main {
    padding: 100px 0 60px;
  }
  
  .journey-header {
    margin-bottom: 40px;
  }
  
  .journey-card-title {
    font-size: 20px;
  }
}

/* === ARTICLE NAVIGATION === */
.journey-breadcrumb {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32px;
  padding-bottom: 16px;
  border-bottom: 1px solid rgba(200, 169, 106, 0.18);
}

.journey-back-link {
  font-family: 'Poppins', sans-serif;
  font-size: 14px;
  color: var(--muted);
  text-decoration: none;
  transition: color 0.2s ease;
}

.journey-back-link:hover {
  color: var(--gold);
}

.journey-nav-links {
  display: flex;
  gap: 24px;
}

.journey-nav-link {
  font-family: 'Poppins', sans-serif;
  font-size: 14px;
  color: var(--muted);
  text-decoration: none;
  transition: color 0.2s ease;
}

.journey-nav-link:hover {
  color: var(--gold);
}

@media (max-width: 768px) {
  .journey-breadcrumb {
    flex-direction: column;
    gap: 16px;
    align-items: flex-start;
  }
  
  .journey-nav-links {
    gap: 16px;
  }
}

/* === ARTICLE HERO SECTION === */
.journey-hero {
  position: relative;
  margin-bottom: 48px;
  border-radius: var(--radius);
  overflow: hidden;
}

.journey-hero-image {
  width: 100%;
  height: auto;
  aspect-ratio: 16 / 9;
  object-fit: cover;
  display: block;
}

.journey-hero-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(180deg, transparent 0%, rgba(11, 15, 13, 0.8) 60%, rgba(11, 15, 13, 0.95) 100%);
  padding: 48px 32px 32px;
}

.journey-hero-text {
  max-width: 800px;
}

.journey-hero-title {
  font-family: 'Bordeaux Light', serif;
  font-weight: 300;
  font-size: clamp(28px, 4vw, 48px);
  text-transform: uppercase;
  letter-spacing: 0.04em;
  line-height: 1.1;
  color: var(--ink);
  margin: 0 0 16px;
}

.journey-hero-subtitle {
  font-family: 'Poppins', sans-serif;
  font-size: 16px;
  line-height: 1.6;
  color: var(--muted);
  margin: 0;
}

@media (max-width: 768px) {
  .journey-hero-content {
    padding: 32px 20px 24px;
  }
  
  .journey-hero-title {
    font-size: clamp(24px, 5vw, 32px);
    margin-bottom: 12px;
  }
  
  .journey-hero-subtitle {
    font-size: 14px;
  }
}

/* === ARTICLE META === */
.journey-meta {
  margin-top: 24px;
  font-family: 'Poppins', sans-serif;
  font-size: 12px;
  color: var(--muted);
  letter-spacing: 1px;
  text-transform: uppercase;
}

.journey-reading-time {
  opacity: 0.8;
}

/* === ARTICLE CONTENT === */
.journey-content {
  margin-bottom: 64px;
}

.journey-prose {
  max-width: 800px;
  margin: 0 auto;
}

.journey-prose p {
  font-family: 'Poppins', sans-serif;
  font-size: 16px;
  line-height: 1.7;
  color: var(--ink);
  margin-bottom: 24px;
}

.journey-prose h2 {
  font-family: 'Bordeaux Light', serif;
  font-weight: 300;
  font-size: 24px;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--gold);
  margin: 48px 0 24px;
}

.journey-prose h3 {
  font-family: 'Bordeaux Light', serif;
  font-weight: 300;
  font-size: 20px;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--accent);
  margin: 36px 0 18px;
}

@media (max-width: 768px) {
  .journey-prose {
    max-width: none;
  }
  
  .journey-prose p {
    font-size: 15px;
    margin-bottom: 20px;
  }
  
  .journey-prose h2 {
    font-size: 22px;
    margin: 36px 0 20px;
  }
  
  .journey-prose h3 {
    font-size: 18px;
    margin: 28px 0 16px;
  }
}

/* === PRINT STYLES === */
@media print {
  .journey-nav,
  .journey-header,
  .journey-card-tags,
  .journey-article-tags {
    display: none;
  }
  
  .journey-article {
    padding: 0;
    max-width: none;
  }
}